<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_detail">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/appbar_top_margin"
        android:background="@color/fui_transparent"
        app:elevation="0dp">

        <include
            android:id="@+id/includedLayout"
            layout="@layout/custom_action_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="4dp"
                            android:src="@drawable/ic_user_circle"
                            app:tint="@color/text_primary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Username"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="john_doe"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btn_copy_username"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/bg_round_corner_8"
                            android:backgroundTint="@color/off_white"
                            android:clickable="true"
                            android:focusable="true"
                            android:contentDescription="Copy username"
                            android:src="@drawable/ic_copy"
                            app:tint="@color/dark_grey"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorOutlineVariant" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="4dp"
                            android:src="@drawable/ic_lock_circle"
                            app:tint="@color/primary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Password"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_password"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="••••••••••••"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btn_toggle_password"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/bg_round_corner_8"
                            android:backgroundTint="@color/off_white"
                            android:contentDescription="Toggle password visibility"
                            android:enabled="true"
                            android:src="@drawable/ic_eye_visible"
                            app:tint="@color/dark_grey" />

                        <ImageButton
                            android:id="@+id/btn_copy_password"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/bg_round_corner_8"
                            android:contentDescription="Copy password"
                            android:backgroundTint="@color/off_white"
                            android:clickable="true"
                            app:tint="@color/dark_grey"
                            android:focusable="true"
                            android:src="@drawable/ic_copy" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorOutlineVariant" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="4dp"
                            android:src="@drawable/ic_web"
                            app:tint="@color/primary_dark" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Website"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_website"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="https://twitter.com"
                                android:textColor="?attr/colorPrimary"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btn_copy_website"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/bg_round_corner_8"
                            android:backgroundTint="@color/off_white"
                            android:contentDescription="Copy website"
                            android:clickable="true"
                            android:focusable="true"
                            app:tint="@color/dark_grey"
                            android:src="@drawable/ic_copy" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorOutlineVariant" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="4dp"
                            android:src="@drawable/ic_note"
                            app:tint="@color/text_primary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Notes"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_notes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="My social media account"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/fui_transparent"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="12dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:background="@drawable/bg_left_round_corner_8"
            android:text="Edit"
            app:backgroundTint="@color/start_color"
            app:icon="@drawable/ic_edit"
            app:iconGravity="textStart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:background="@drawable/bg_right_round_corner_8"
            android:text="Delete"
            app:backgroundTint="@color/start_color"
            app:icon="@drawable/ic_delete"
            app:iconGravity="textStart" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>